#!groovy
import groovy.json.JsonSlurperClassic
pipeline {



    //def texei = tool 'texei'
    environment {
        
        SFDC_USERNAME = "${env.HUB_ORG_DH}"
        TEST_LEVEL="RunLocalTests"
        HUB_ORG= "${env.HUB_ORG_DH}"
        SFDC_HOST = "${env.SFDC_HOST_DH}"
        JWT_KEY_CRED_ID = "${env.JWT_CRED_ID_DH}"
        CONNECTED_APP_CONSUMER_KEY="${env.CONNECTED_APP_CONSUMER_KEY_DH}"
        CONNECTED_APP_CONSUMER_KEY_TWO="${env.CONNECTED_APP_CONSUMER_KEY_DH_TWO}"
        USERNAME2="rebbe@dev.com"
        jwt_key_file = credentials('JWT_KEY_CRED_ID') // Secret value is 'sec%ret'
    }
    stages {
        stage('checkout source') {
            // when running in multi-branch job, one must issue this command
            checkout scm
        }

        stage('Auth Org') {

        rc = command "sfdx auth:jwt:grant --instanceurl ${SFDC_HOST} --clientid ${CONNECTED_APP_CONSUMER_KEY} --username ${HUB_ORG_DH} --jwtkeyfile ${jwt_key_file} --setdefaultdevhubusername --setalias HubOrg"
                if (rc != 0) {
                    error 'Salesforce dev hub org authorization failed.'
                }
            println rc

        }

        stage('Run Test Code') {

			// need to pull out assigned username
			   rmsg = command "sfdx force:apex:test:run --targetusername HubOrg --resultformat human --codecoverage --testlevel ${TEST_LEVEL}"
			  
            println('Hello from a Job DSL script! ok')
            println(rmsg)
        }


